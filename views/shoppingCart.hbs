<!DOCTYPE HTML>
<html>
    <head>
        <title>The Digital Book Corner</title>
        <meta charset="utf-8" />
        <meta name="description" content="Digital Book Library">
        <meta name="keywords" content="library, books, digital, academic, fiction, non-fiction">
        <meta name="author" content="Claire Hooper, Krizia Olitoquit, Robbie Anderson">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    </head>
    <body>
        <header>
            <div id="logoimg">
                <a href=""><img src=""></a>
            </div>
            <div id="loginandshoppingcart">
                <div id="loginbutton">
                    <button>Login</button>
                </div>
                <div id="shoppingcart">
                    <button><img src=""></button>
                </div>
            </div>
            <div id="navbarlinks">

            </div>

        </header>

            <table class="shoppingCart">
                <tr>
                    <th>Book</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Full Price</th>
                    <th>Remove</th>
                </tr>
                <tr>
                    <td>
                        {{this.BookTitle}}<br>
                        {{this.Author}}
                    </td>
                    <td>
                        <!-- Add a placeholder for quantity -->
                        {{this.Quantity}}
                    </td>
                    <td>
                        <!-- Add a placeholder for price -->
                        {{this.Price}}
                    </td>
                    <td>
                        <!-- Add a placeholder for full price -->
                        {{this.FullPrice}}
                    </td>
                    <td>
                        <button name="deleterecord" type="button" class="btn btn-danger btn-sm" onclick="remove_item()">Remove</button>
                    </td>
                </tr>
            </table>


    </body>
</html>